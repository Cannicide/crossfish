{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 18",
  
    "_version": "18.15.0",
  
    "compilerOptions": {
      "lib": ["ES2022"],
      "module": "ES2022",
      "target": "ES2022",
  
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "Node16",

      "outDir": "lib",
      "declaration": true
    },

    "include": ["src/**/*"],
    "exclude": ["lib/**/*"]
}